<h1>Edit task</h1>
<form action="/task/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label for="new-task-description">New Task description:</label>
  <input id="new-task-description" name="new-task-description" type="text" value="@Model.GetDescription()">

  <label for="new-due-date">Due Date</label>
  <input name="new-due-date" id="due-date" type="datetime-local">

  <label for="new-task-completed">Completed?</label>
  <input type="checkbox" name="new-task-completed" value=@Model.GetCompleted()>
  <button type="submit">Update task</button>
</form>
<p><a href="/">Back home</a></p>
<p><a href="/tasks">View all tasks</a></p>
